<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv_novel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="150dp"
    app:cardCornerRadius="5dp"
    android:background="@color/colorWhite"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_novel_img"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/n_searchlove"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_novel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="2dp"
            android:text="Title Novel"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView"
            android:layout_marginHorizontal="20dp"/>
        <TextView
            android:id="@+id/tv_novel_genre"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Genre"/>
    </LinearLayout>
</android.support.v7.widget.CardView>